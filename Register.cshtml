
@{
    ViewBag.Title = "Login";
}


<div class="container">
  
    <!-- Heading Row -->
    <div class="col-sm-10" style="width:600 px;margin-left:250 px;margin-top:50 px;">
        <div class="jumbotron">
            <div class="form-group">
                <h2>SignUp</h2>
            </div>
            <form action="/action_page.php">
                <div class="container">
                    <label><b><h3>First Name</h3></b></label><br />
                    <input type="text" placeholder="Enter First Name" name="FirstName" required> <br/>
                    
                    <label><b><h3>Middle Name</h3></b></label><br />
                    <input type="text" placeholder="Enter Middle Name" name="MiddleName"><br />

                    <label><b><h3>Last Name</h3></b></label><br />
                    <input type="text" placeholder="Enter Last Name" name="LastName" required><br />

                    <label><b><h3>Email</h3></b></label><br />
                    <input type="text" placeholder="Enter Email" name="email" required><br />

                    <label><b><h3>Password</h3></b></label><br />
                    <input type="password" placeholder="Enter Password" name="psw" required><br />

                    <label><b><h3>Repeat Password</h3></b></label><br />
                    <input type="password" placeholder="Repeat Password" name="psw-repeat" required><br />

                    <label><b><h3>Date of Birth</h3></b></label><br />
                    <input type="date" placeholder="Enter Date Of Birth" name="Date of Birth" required><br />

                    <label><b><h3>Address</h3></b></label><br />
                    <input type="text" placeholder="Enter Address" name="Address" required><br />
                    <form>
                        <label><b><h3>Gender</h3></b></label><br />
                        <input type="radio" name="gender" value="male" checked> Male
                        <input type="radio" name="gender" value="female"> Female<br>
                    </form>

                        <label><b><h3>Phone number</h3></b></label><br />
                        <input type="number" placeholder="Enter Mobile number" name="Mobile number" required><br />
                        <br /><input type="checkbox" checked="checked">Patient Information Type Private<br />


                        <input type="checkbox" checked="checked">By creating an account you agree to our <a href="#">Terms & Privacy</a>.

                        <div class="clearfix">
                            <button type="button" class="cancelbtn">Cancel</button>
                            <button type="submit" class="signupbtn">Sign Up</button>
                        </div>
</div>
            </form>
        </div>
        <div class="col-lg-8">
            
        </div>

    </div>
</div>
